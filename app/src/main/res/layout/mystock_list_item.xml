<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/mystock_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mystock_currnet_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/mystock_currnet_price"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mystock_byprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="@id/mystock_currnet_price"
        app:layout_constraintTop_toBottomOf="@id/mystock_currnet_price" />

    <TextView
        android:id="@+id/mystock_volumn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toEndOf="@id/mystock_byprice"
        app:layout_constraintTop_toTopOf="@id/mystock_byprice" />

    <TextView
        android:id="@+id/mystock_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toEndOf="@id/mystock_volumn"
        app:layout_constraintTop_toTopOf="@id/mystock_volumn" />


</androidx.constraintlayout.widget.ConstraintLayout>